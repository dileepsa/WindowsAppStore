<Window x:Class="WindowsAppStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsAppStore"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:WindowsAppStore.UserControls"
        Title="WindowsAppStore"
        x:Name="MainWindowMetro"
        Height="800"
        Width="1350"
        Margin="7">
    
    
    <Grid>
        <Frame x:Name="MainWindowFrame"
               Loaded="MainWindowFrame_Loaded"
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"
               NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
